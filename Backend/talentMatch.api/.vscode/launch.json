{
    "version": "0.2.0",
    "configurations": [
      {
        "name": ".NET Core Launch (web)",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build",
        "program": "${workspaceFolder}/TicketAutomation.Api/bin/Debug/net8.0/TicketAutomation.Api.dll",
        "args": [],
        "cwd": "${workspaceFolder}/TicketAutomation.Api",
        "stopAtEntry": false,
        "serverReadyAction": {
          "action": "openExternally",
          "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
        },
        "env": {
          "ASPNETCORE_ENVIRONMENT": "Development"
        },
        "sourceFileMap": {
          "/Views": "${workspaceFolder}/Views"
        },
        "launchBrowser": {
          "enabled": true,
          "args": "${auto-detect-url}",
          "windows": {
            "command": "cmd.exe",
            "args": "/c start ${auto-detect-url}"
          },
          "linux": {
            "command": "xdg-open",
            "args": ["${auto-detect-url}"]
          },
          "osx": {
            "command": "open",
            "args": ["${auto-detect-url}"]
          }
        }
      }
    ]
  }
  